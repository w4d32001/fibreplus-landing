<script is:inline>
    const typedTextElement = document.getElementById("typed-text");
    const fullText = "Conecta con FiberPlus";
    let index = 0;

    function typeText() {
        if (index <= fullText.length) {
            typedTextElement.textContent = fullText.slice(0, index);
            index++;
            setTimeout(typeText, 100);
        }
    }

    const orb1 = document.getElementById("orb-1");
    const orb2 = document.getElementById("orb-2");
    const orb3 = document.getElementById("orb-3");

    document
        .getElementById("hero-section")
        .addEventListener("mousemove", (e) => {
            const { clientX, clientY } = e;
            const x = (clientX / window.innerWidth - 0.5) * 20;
            const y = (clientY / window.innerHeight - 0.5) * 20;

            orb1.style.transform = `translate(${x}px, ${y}px)`;
            orb2.style.transform = `translate(${-x}px, ${-y}px)`;
            orb3.style.transform = `translate(${y}px, ${x}px)`;
        });
    const particlesContainer = document.getElementById("particles");
    for (let i = 0; i < 20; i++) {
        const particle = document.createElement("div");
        particle.className = "particle";
        particle.style.left = `${Math.random() * 100}%`;
        particle.style.top = `${Math.random() * 100}%`;
        particle.style.animationDuration = `${5 + Math.random() * 10}s`;
        particle.style.animationDelay = `${Math.random() * 5}s`;
        particlesContainer.appendChild(particle);
    }
    window.addEventListener("load", () => {
        setTimeout(typeText, 500);
    });
</script>
