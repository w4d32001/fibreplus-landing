---
interface Props {
    recommended?: boolean;
    oldSpeed?: string;
    speed: string;
    monthsPromo: string;
    oldSpeedPromo: string;
    technology: string;
    feature: string;
    price: string;
    totalMonths: string;
    totalPrice: string;
}

const {
    recommended = false,
    oldSpeed,
    speed,
    monthsPromo,
    oldSpeedPromo,
    technology,
    feature,
    price,
    totalMonths,
    totalPrice,
} = Astro.props;
---

<div
    class={`relative rounded-3xl overflow-hidden w-75 shadow-xl ${
        recommended
            ? "bg-linear-to-b from-black to-gray-800 text-white"
            : "bg-white text-gray-800"
    }`}
>
    {
        recommended && (
            <div class=" text-secondary text-center py-2 font-bold text-sm">
                PLAN RECOMENDADO
            </div>
        )
    }

    <div class="p-6">
        {
            oldSpeed && (
                <p
                    class={`text-sm line-through block text-center ${
                        recommended ? "text-gray-400" : "text-gray-500"
                    }`}
                >
                    {oldSpeed}
                </p>
            )
        }
        <h2 class="text-xl font-bold mb-2 text-center">{speed}</h2>
        <span
            class={`block text-center px-3 py-1 rounded-full text-xs font-semibold mb-2 ${
                recommended
                    ? "bg-gray-700 text-white"
                    : "bg-gray-300 text-gray-700"
            }`}
        >
            {monthsPromo}
        </span>
        <p
            class={`text-sm mb-6 block text-center ${
                recommended ? "text-gray-300" : "text-gray-600"
            }`}
        >
            INTERNET 100% FIBRA ÓPTICA
        </p>
        <div
            class={`rounded-full w-32 h-32 mx-auto mb-4 flex items-center justify-center ${
                recommended ? "bg-gray-900" : "bg-gray-100"
            }`}
        >
            <svg
                class={`w-20 h-20 ${
                    recommended ? "stroke-white" : "stroke-gray-800"
                }`}
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12"
                ></path>
            </svg>
        </div>
        <div class="text-center mb-6">
            <p
                class={`text-sm font-medium ${
                    recommended ? "text-gray-300" : "text-gray-600"
                }`}
            >
                {technology}
            </p>
            <p
                class={`text-sm ${
                    recommended ? "text-gray-400" : "text-gray-500"
                }`}
            >
                {feature}
            </p>
        </div>
        {
            recommended && (
                <hr class="border-gray-700 mb-6" />
            )
        }
        <div class="text-center mb-4">
            <span
                class={`text-2xl ${
                    recommended ? "text-secondary" : "text-gray-800"
                }`}
            >
                s/
            </span>
            <span
                class={`text-6xl font-bold ${
                    recommended ? "text-secondary" : "text-secondary"
                }`}
            >
                {price}
            </span>
            <span
                class={`text-2xl ${
                    recommended ? "text-secondary" : "text-secondary"
                }`}
            >
                .90
            </span>
        </div>
        <p
            class={`text-center text-sm mb-6 ${
                recommended ? "text-gray-400" : "text-gray-500"
            }`}
        >
            X {totalMonths}. Después S/{totalPrice}
        </p>
        <button
            class={`w-full py-3 rounded-full font-semibold transition-all shadow-xl duration-300 ${
                recommended
                    ? "bg-linear-to-r from-gray-700 to-gray-600 text-white hover:from-gray-600 hover:to-gray-500"
                    : "bg-linear-to-r from-gray-500 to-gray-400 text-white hover:from-gray-600 hover:to-gray-500"
            }`}
        >
            Quiero este plan
        </button>
    </div>
</div>