---
import Home from "../components/sections/Home.astro";
import Plans from "../components/sections/Plans.astro";
import Us from "../components/sections/Us.astro";
import Layout from "../layouts/Layout.astro";
import Location from "../components/sections/Location.astro";

import "../styles/global.css";
---

<Layout>
    <Home />
    <Us />
    <Plans />
    <Location />
    <div class="fixed bottom-6 right-6 flex flex-col gap-4 z-50">
        <a
            href="https://wa.me/51946759827?text=Hola,%20necesito%20información%20sobre%20sus%20servicios"
            target="_blank"
            class="floating-btn w-14 h-14 bg-green-500 rounded-full flex items-center justify-center shadow-lg hover:shadow-xl float-animation"
            title="Contactar por WhatsApp"
        >
            <svg
                class="w-8 h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                ></path>
            </svg>
        </a>
        <button
            id="contact-btn"
            class="floating-btn w-14 h-14 bg-secondary rounded-full flex items-center justify-center shadow-lg hover:shadow-xl cursor-pointer"
            title="Abrir formulario de contacto"
        >
            <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
                ></path>
            </svg>
        </button>
    </div>

    <div
        id="contact-modal"
        class="hidden fixed inset-0 bg-black/80 bg-opacity-50 z-50 flex items-center justify-center p-4"
    >
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 relative">
            <button
                id="close-modal"
                class="absolute top-4 right-4 text-gray-400 hover:text-gray-600"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>

            <h2 class="text-2xl font-bold mb-4 text-gray-800">Contáctanos</h2>

            <form id="contact-form" class="space-y-4">
                <div>
                    <label
                        for="name"
                        class="block text-sm font-medium text-gray-700 mb-1"
                    >
                        Nombre
                    </label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        class="w-full outline-none px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
                        placeholder="Tu nombre"
                    />
                    <span
                        class="error-message text-red-500 text-xs mt-1"
                        id="name-error"></span>
                </div>

                <div>
                    <label
                        for="email"
                        class="block text-sm font-medium text-gray-700 mb-1"
                    >
                        Email
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="w-full outline-none px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
                        placeholder="tu@email.com"
                    />
                    <span
                        class="error-message text-red-500 text-xs mt-1"
                        id="email-error"></span>
                </div>

                <div>
                    <label
                        for="subject"
                        class="block text-sm font-medium text-gray-700 mb-1"
                    >
                        Asunto
                    </label>
                    <input
                        type="text"
                        id="subject"
                        name="subject"
                        required
                        class="w-full outline-none px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
                        placeholder="Asunto del mensaje"
                    />
                    <span
                        class="error-message text-red-500 text-xs mt-1"
                        id="subject-error"></span>
                </div>

                <div>
                    <label
                        for="message"
                        class="block text-sm font-medium text-gray-700 mb-1"
                    >
                        Mensaje
                    </label>
                    <textarea
                        id="message"
                        name="message"
                        rows="4"
                        required
                        class="w-full outline-none px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-secondary focus:border-transparent"
                        placeholder="¿En qué podemos ayudarte?"></textarea>
                    <span
                        class="error-message text-red-500 text-xs mt-1"
                        id="message-error"></span>
                </div>

                <button
                    type="submit"
                    id="submit-btn"
                    class="w-full bg-secondary text-white py-3 rounded-lg font-semibold hover:bg-secondary/90 transition-colors cursor-pointer disabled:bg-gray-400 disabled:cursor-not-allowed"
                >
                    <span id="button-text">Enviar mensaje</span>
                    <span id="button-loading" class="hidden">Enviando...</span>
                </button>

                <div id="form-message" class="hidden p-3 rounded-lg text-sm">
                </div>
            </form>
        </div>
    </div>
</Layout>

<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
        const modal = document.getElementById("contact-modal");
        const closeModalBtn = document.getElementById("close-modal");
        const form = document.getElementById("contact-form");
        const submitBtn = document.getElementById("submit-btn");
        const buttonText = document.getElementById("button-text");
        const buttonLoading = document.getElementById("button-loading");
        const formMessage = document.getElementById("form-message");
        const contactBtn = document.getElementById("contact-btn");

        const API_URL = "https://apimail-production.up.railway.app/api";

        contactBtn?.addEventListener("click", () => {
            modal?.classList.remove("hidden");
        });

        closeModalBtn?.addEventListener("click", () => {
            modal?.classList.add("hidden");
            form.reset();
            clearErrors();
        });

        modal?.addEventListener("click", (e) => {
            if (e.target === modal) {
                modal.classList.add("hidden");
                form.reset();
                clearErrors();
            }
        });

        function clearErrors() {
            document.querySelectorAll(".error-message").forEach((el) => {
                el.textContent = "";
            });
            formMessage.classList.add("hidden");
            formMessage.className = "hidden p-3 rounded-lg text-sm";
        }

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();

            clearErrors();

            submitBtn.disabled = true;
            buttonText.classList.add("hidden");
            buttonLoading.classList.remove("hidden");

            const formData = new FormData(form);
            const data = {
                name: formData.get("name"),
                email: formData.get("email"),
                subject: formData.get("subject"),
                message: formData.get("message"),
            };

            try {
                const response = await fetch(`${API_URL}/contact`, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data),
                });

                const result = await response.json();

                if (response.ok) {
                    formMessage.textContent =
                        result.message || "¡Mensaje enviado exitosamente!";
                    formMessage.className =
                        "p-3 rounded-lg text-sm bg-green-100 text-green-800 border border-green-200";
                    formMessage.classList.remove("hidden");

                    setTimeout(() => {
                        form.reset();
                        modal.classList.add("hidden");
                    }, 3000);
                } else {
                    formMessage.textContent = Array.isArray(result.message)
                        ? result.message.join(". ")
                        : result.message || "Error al enviar el mensaje";

                    formMessage.className =
                        "p-3 rounded-lg text-sm bg-red-100 text-red-800 border border-red-200";
                    formMessage.classList.remove("hidden");
                }
            } catch (err) {
                formMessage.textContent = "Error de conexión con la API";
                formMessage.className =
                    "p-3 rounded-lg text-sm bg-red-100 text-red-800 border border-red-200";
                formMessage.classList.remove("hidden");
            } finally {
                submitBtn.disabled = false;
                buttonText.classList.remove("hidden");
                buttonLoading.classList.add("hidden");
            }
        });

        window.openContactModal = () => {
            modal?.classList.remove("hidden");
        };
    });
</script>
